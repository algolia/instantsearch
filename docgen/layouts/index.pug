extends archetypes/single-column.pug

block content
  section.is-section__intro
    figure.section-illustration
      img(src="assets/img/search-focus.svg", width="380", class="searchfocus-illu hidden-md-down")
      img(src="assets/img/autocomplete-dropdown-simple.svg", width="300", class="autocomplete-illu hidden-md-down", data-move= '-y', data-threesold = '300', data-factor = '50')

    .container.text-center
      h2.title.
        Leverage Algolia’s Out of the Box Search on Android
      p.
        Algolia is a leading provider of hosted search delivering a full-featured autocomplete menu with realtime results from the first keystroke.

  section.is-section__blocks
    .spacer100
    .container.flex-container
      .flex-item-100.text-center
        h2 Built for mobile from the ground up
      .spacer100
      .flex-item-60.text-center
        img(src="assets/img/phone-build-3D.svg", class="illustration")


      .flex-item-40
        p.
          Widgets and Helpers give you the API & UX tools to easily integrate a powerful search in any Android App

      .spacer100

      .flex-item-100.text-center
        h2 UX Tools
        .spacer60
        ul.flex-container.flex-space
          li.flex-item-30
            img(src="assets/img/icon-highlighting.svg")
            p.
              <a href="https://community.algolia.com/instantsearch-android/concepts.html#highlighting">Highlighting</a>
          li.flex-item-30
            img(src="assets/img/icon-refinement-list.svg")
            p.
              Refinement lists
          li.flex-item-30
            img(src="assets/img/icon-infinite-scroll.svg")
            p.
              <a href="https://community.algolia.com/instantsearch-android/widgets.html#infinite-scroll">Infinite scroll</a>
    .spacer100

  section.is-section__relevancy
    .container.flex-container.v-center
        .section-content.flex-item-50
          h2 Build beautiful search on Android easily
          p.
            InstantSearch for Android brings you pre-built UI widgets and components so you can easily build serverless search.
          ul.bullets
            li Fully customizable search results page
            li Intuitive UI Components
            li Complete Documentation

          p.
            All of the best practices we learned while implementing search on hundreds of websites are now packed into our widgets


        .section-content.flex-item-50.text-center
