doctype html
html
  head
    meta(content='IE=edge', http-equiv='X-UA-Compatible')
    meta(charset='utf-8')
    meta(content='width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no', name='viewport')
    link(rel='icon', href=h.publicPath('assets/favicon.png'))
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    title react-instantsearch | #{title}
    if stylesheets
      for sheet in stylesheets
        link(rel="stylesheet" href=sheet)
    link(rel="stylesheet" href=h.publicPath(`examples/${name}/style.css`))
    link(rel='stylesheet', href=h.publicPath('stylesheets/index.css'))
  body.example
    include ./common/header.pug
    .content!=contents
    script(src=webpack.assets[`examples/${name}/index.js`])
