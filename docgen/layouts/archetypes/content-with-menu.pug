doctype html
html
  head
    meta(content='IE=edge', http-equiv='X-UA-Compatible')
    meta(charset='utf-8')
    meta(content='width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no', name='viewport')
    link(rel='icon', href=h.publicPath('assets/favicon.png'))
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    title react-instantsearch | #{title}
    link(rel='stylesheet', href=h.publicPath('stylesheets/index.css'))
    link(rel='stylesheet', href=h.publicPath('assets/css/theme.css'))
  body
    include ../common/header.pug
    section.hero-section.shrink
      .container
        .hero-container
          .fl-right.project-logo
            img(src=h.publicPath('images/al-helper-logo.svg'))
          .fl-left.article-title
            a(href='https://www.algolia.com/?utm_medium=social-owned&utm_source=algoliasearch-helper%20website&utm_campaign=homepage', title='Algolia built this')
              span#icon-algolia.icon.icon-algolia-small.no-mobile
            h1= title
    section.documentation-section
      .container
        nav.sidebar
          block navigation
        .documentation-container
          block content
    include ../common/footer.pug
    script(src=webpack.assets['js/main.js'])
