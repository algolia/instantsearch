{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "es2020",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "exclude": [
    "**/es",
    "**/dist",
    "tests/e2e",
    // Next.js examples have their own tsconfig and are type-checked during
    // their build. They import from local packages that need to be built first.
    "examples/react/next",
    "examples/react/next-routing",
    "examples/react/next-app-router",
    // @TODO: we need to re-enable type checking in the React Native example
    // when the RN types work with React 18.
    "examples/react/react-native",
    "packages/create-instantsearch-app/src/templates/**/*"
  ]
}
