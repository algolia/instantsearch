{
  "name": "instantsearch-web",
  "version": "0.0.0",
  "description": "Root workspace for all InstantSearch Web projects",
  "private": true,
  "workspaces": [
    "examples/*/*",
    "packages/*",
    "tests/*",
    "specs"
  ],
  "scripts": {
    "build": "lerna run build",
    "doctoc": "doctoc --no-title --maxlevel 3 README.md CONTRIBUTING.md packages/*/README.md",
    "website:storybook": "lerna run storybook:build",
    "website:examples": "lerna run website:examples",
    "website:specs": "yarn --cwd website/src/specs install && yarn --cwd website/src/specs build",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --ext .js,.ts,.tsx --fix .",
    "type-check": "tsc && lerna run type-check",
    "type-check:v3": "tsc --project tsconfig.v3.json",
    "test": "jest",
    "test:size": "bundlesize",
    "test:exports": "lerna run test:exports",
    "test:e2e": "yarn test:e2e:local",
    "test:e2e:local": "wdio scripts/wdio/local.conf.js",
    "test:e2e:saucelabs": "wdio scripts/wdio/saucelabs.conf.js",
    "release": "shipjs prepare"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.15.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-transform-react-constant-elements": "7.9.0",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@googlemaps/jest-mocks": "2.7.5",
    "@microsoft/api-extractor": "7.18.0",
    "@storybook/addon-actions": "5.3.9",
    "@storybook/html": "5.3.9",
    "@storybook/theming": "5.3.9",
    "@testing-library/dom": "8.18.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/preact": "3.2.2",
    "@types/jest": "27.0.1",
    "@types/jsdom": "16.2.13",
    "@types/storybook__addon-actions": "3.4.2",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "4.15.1",
    "algoliasearch": "4.11.0",
    "algoliasearch-v3": "npm:algoliasearch@3.35.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "27.1.0",
    "babel-loader": "8.0.6",
    "babel-plugin-inline-replace-variables": "1.3.1",
    "babel-plugin-polyfill-es-shims": "0.0.7",
    "babel-plugin-transform-react-pure-class-to-function": "1.0.1",
    "bundlesize": "0.18.0",
    "conventional-changelog-cli": "2.0.31",
    "doctoc": "1.4.0",
    "eslint": "6.8.0",
    "eslint-config-algolia": "16.0.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-deprecation": "1.3.2",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jasmine": "4.1.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.18.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "eslint-plugin-wdio": "5.11.0",
    "jest": "27.1.0",
    "jest-diff": "27.1.0",
    "jest-environment-jsdom": "27.1.0",
    "jest-environment-jsdom-global": "2.0.4",
    "jest-junit": "12.2.0",
    "jest-watch-typeahead": "0.6.4",
    "jscodeshift": "0.7.0",
    "jsdom-global": "3.0.2",
    "lerna": "6.0.3",
    "prettier": "2.3.2",
    "rollup": "1.29.1",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-filesize": "6.2.1",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-uglify": "6.0.4",
    "shelljs": "0.8.5",
    "shipjs": "0.25.0",
    "typescript": "4.3.5"
  },
  "resolutions": {
    "brotli-size": "4.0.0"
  },
  "bundlesize": [
    {
      "path": "./packages/instantsearch.js/dist/instantsearch.production.min.js",
      "maxSize": "72.75 kB"
    },
    {
      "path": "./packages/instantsearch.js/dist/instantsearch.development.js",
      "maxSize": "160 kB"
    },
    {
      "path": "./packages/instantsearch.css/themes/algolia.css",
      "maxSize": "3.5 kB"
    },
    {
      "path": "./packages/instantsearch.css/themes/algolia-min.css",
      "maxSize": "3.25 kB"
    },
    {
      "path": "./packages/instantsearch.css/themes/reset.css",
      "maxSize": "1.25 kB"
    },
    {
      "path": "./packages/instantsearch.css/themes/reset-min.css",
      "maxSize": "1 kB"
    },
    {
      "path": "./packages/instantsearch.css/themes/satellite.css",
      "maxSize": "4.5 kB"
    },
    {
      "path": "./packages/instantsearch.css/themes/satellite-min.css",
      "maxSize": "4.25 kB"
    }
  ]
}
