{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "webdriverio", "jasmine"],
    "allowJs": true,
    "checkJs": true
  },
  "exclude": ["node_modules", "playwright"],
  "include": [
    "./*.ts",
    "./*.js",
    "./specs/**/*.ts",
    "./helpers/**/*.ts"
  ]
}
