---
const { BASE_URL } = import.meta.env;
---

<div class="theme-selector">
  <label>
    <small>Choose a CSS theme:</small>
    <select name="" id="js-changeTheme">
      <option value={`${BASE_URL}/styles/satellite.css`}>Satellite</option>
      <option value={`${BASE_URL}/styles/algolia.css`}>Algolia</option>
      <option value={`${BASE_URL}/styles/reset.css`}>Reset</option>
      <option value="">None</option>
    </select>
  </label>
</div>
